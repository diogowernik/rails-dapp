    <header class="left-0 top-0 z50 bg-white/90 w-full shadow-md fixed">
      <div class="mx-auto h-[60px] max-w-7xl">
        <div class="flex justify-between items-center h-full border-b border-slate-500/10 px-5">
          <!-- Logo -->
          <div class="flex items-center">
            <%= image_tag "coffee.png", class: "w-[2rem]" %>
            <span class="ml-2 text-xl font-semibold">
            Buymeacoffee
            </span>
          </div>
          <!-- Wallet -->


          <div 
            hidden
            data-metamask-target="wallet"
          >
            <div class="flex items-center">
            <!-- Network Dropdown -->
              <select 
                data-action="change->metamask#changeNetwork"
                class="ml-2 bg-white px-3 py-1 rounded"
              >
                <% @networks.each do |networkKey, networkData| %>
                  <option value="<%= networkKey %>"><%= networkData[:name] %></option>
                <% end %>
              </select>
            
              <%=image_tag "ethereum.png", class: "mr-1 h-5 w5" %>
              <p 
                data-metamask-target="balance"
                class="mr-5 font-semibold text-slate-500"
              >
              </p>
              <p 
                data-metamask-target="address"
                class="mr-5 font-semibold text-slate-500"
              >
              </p>


            </div>
          </div>
        </div>
      </div>
    </header>